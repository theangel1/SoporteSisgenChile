@model SoporteDteCore.Models.BoletaElectronica

@{
    ViewData["Title"] = "Editar Estado";
}
<h3 class="text-info">Editar Estado</h3>
<hr />

<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <div class="row">
        <div class="form-group col-lg-6">
            <label asp-for="RutCliente" class="control-label"></label>
            <input asp-for="RutCliente" class="form-control" />
            <span asp-validation-for="RutCliente" class="text-danger"></span>
        </div>
        <div class="form-group col-lg-6">
            <label asp-for="RazonSocial" class="control-label"></label>
            <input asp-for="RazonSocial" class="form-control" />
            <span asp-validation-for="RazonSocial" class="text-danger"></span>
        </div>

    </div>

    <div class="row">
        <div class="form-group col-lg-6">
            <label asp-for="FechaInicio" class="control-label"></label>
            <input asp-for="FechaInicio" class="form-control" />
            <span asp-validation-for="FechaInicio" class="text-danger"></span>
        </div>
        <div class="form-group col-lg-6">
            <label asp-for="Estado" class="control-label"></label>
            <select asp-for="Estado" asp-items="Html.GetEnumSelectList<Estado>()" class="form-control"></select>
            <span asp-validation-for="Estado" class="text-danger"></span>
        </div>

    </div>

    <div class="row">
        <div class="form-group col-lg-6">
            <label asp-for="Telefono" class="control-label"></label>
            <input asp-for="Telefono" class="form-control" />
            <span asp-validation-for="Telefono" class="text-danger"></span>
        </div>

        <div class="form-group col-lg-6">
            <label asp-for="Email" class="control-label"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <div class="form-group col-lg-6">
            <label asp-for="Facturador" class="control-label"></label>
            <select asp-for="Facturador" class="form-control">
                <option value="0">- Seleccione un Facturador-</option>
                <option value="Directo">Factura Directa</option>
                <option value="Acepta">Factura con Acepta</option>
            </select>
            <span asp-validation-for="Facturador" class="text-danger"></span>
        </div>

        <div class="form-group col-lg-6">
            <label asp-for="CambioFacturador" class="control-label"></label>
            <select asp-for="CambioFacturador" class="form-control">
                <option selected>- Seleccione si el cliente desea cambiar de facturador o no</option>
                <option value="false">NO DESEA CAMBIAR DE FACTURADOR</option>
                <option value="true">SI DESEA CAMBIAR DE FACTURADOR</option>
            </select>
            <span asp-validation-for="CambioFacturador" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Observacion" class="control-label"></label>
        <textarea asp-for="Observacion" class="form-control"></textarea>
        <span asp-validation-for="Observacion" class="text-danger"></span>
    </div>

    <input asp-for="EmailSolicitado" class="text-danger" hidden />
    <input asp-for="EmailSisgenInstalado" class="text-danger" hidden />
    <input asp-for="EmailCertificando" class="text-danger" hidden />
    <input asp-for="EmailFinalizado" class="text-danger" hidden />
    <input asp-for="EmailInstalado" class="text-danger" hidden />

    <div class="form-group">
        <input type="submit" value="Guardar" class="btn btn-outline-info col-sm-12 col-md-12 col-lg-2" />
        <a asp-action="Index" class="btn btn-outline-dark col-sm-12 col-md-12 col-lg-2">Volver a la lista</a>
    </div>
</form>