@model SoporteDteCore.Models.FacturaExportacion
@{
    ViewData["Title"] = "Editar Estado";
}
<h3 class="text-info">Editar Estado</h3>
<hr />
<div class="row">
    <div class="col-lg-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="row">
                <div class="form-group col-lg-6">
                    <label asp-for="RutCliente" class="control-label"></label>
                    <input asp-for="RutCliente" class="form-control" />
                    <span asp-validation-for="RutCliente" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-6">
                    <label asp-for="RazonSocial" class="control-label"></label>
                    <input asp-for="RazonSocial" class="form-control" />
                    <span asp-validation-for="RazonSocial" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-lg-6">
                    <label asp-for="FechaInicio" class="control-label"></label>
                    <input asp-for="FechaInicio" class="form-control" />
                    <span asp-validation-for="FechaInicio" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-6">
                    <label asp-for="Estado" class="control-label"></label>
                    <select asp-for="Estado" asp-items="Html.GetEnumSelectList<Estado>()" class="form-control"></select>
                    <span asp-validation-for="Estado" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Observacion" class="control-label"></label>
                <textarea asp-for="Observacion" class="form-control" ></textarea>
                <span asp-validation-for="Observacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-outline-info col-sm-12 col-md-12 col-lg-2" />
                <a asp-action="Index" class="btn btn-outline-dark col-sm-12 col-md-12 col-lg-2">Volver a la lista</a>
            </div>
        </form>
    </div>
</div>