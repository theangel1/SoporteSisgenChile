@model SoporteDteCore.Models.Cliente
@{
    ViewData["Title"] = "Enrolar Cliente";
}
<h3 class="text-info">@ViewData["Title"]</h3>
<form method="post" asp-action="Enrolar">
    <div class="row">
        <div class="form-group col-sm-4">
            <label asp-for="Rut"></label>
            <input asp-for="Rut" class="form-control" required id="rutCli" onblur="valRut('rutCli')" placeholder="Ej: 12345678-9" />
        </div>
        <div class="form-group col-sm-4">
            <label asp-for="RazonSocial"></label>
            <input asp-for="RazonSocial" class="form-control" required placeholder="Ej: SISGEN Chile Limitada" />
        </div>
    </div>

    <div class="row">
        <div class="form-group col-sm-4">
            <label asp-for="Fantasia"></label>
            <input asp-for="Fantasia" class="form-control" required placeholder="Ej: SISGEN Chile" />
        </div>
        <div class="form-group col-sm-4">
            <label asp-for="Giro"></label>
            <input asp-for="Giro" class="form-control" required placeholder="Ej: Servicios Informáticos" />
        </div>
    </div>

    <div class="row">
        <div class="form-group col-sm-4">
            <label asp-for="Telefono"></label>
            <input asp-for="Telefono" class="form-control" required placeholder="Ej: 12314568" />
        </div>
        <div class="form-group col-sm-4">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" required type="email" placeholder="Ej: correo@email.com" />
        </div>
    </div>

    <div class="row">
        <div class="form-group col-sm-4">
            <label asp-for="Direccion"></label>
            <input asp-for="Direccion" class="form-control" required placeholder="Ej: Av. SiempreViva " />
        </div>

        <div class="form-group col-sm-4">
            <label asp-for="Ciudad"></label>
            <input asp-for="Ciudad" class="form-control" required placeholder="Ej: Santiago" />
        </div>
        <div class="form-group col-sm-4">
            <label asp-for="Estado"></label>
            <input asp-for="Estado" class="form-control" required placeholder="0 = Bloqueado | 1= Activo" />
        </div>
    </div>


    <div class="row">
        <div class="form-group col-sm-4">
            <label asp-for="NombreCertificado"></label>
            <input asp-for="NombreCertificado" class="form-control" required placeholder="Ej: Osvaldo" />
        </div>
        <div class="form-group col-sm-4">
            <label asp-for="ClaveCertificado"></label>
            <input asp-for="ClaveCertificado" class="form-control" required placeholder="Ej: 123456" />
        </div>
    </div>

    <div class="row">
        <div class="form-group col-sm-4">
            <label asp-for="Acteco"></label>
            <input asp-for="Acteco" class="form-control" required placeholder="Ej: 123456" />
        </div>
        <div class="form-group col-sm-4">
            <label asp-for="NombreRepresentanteLegal"></label>
            <input asp-for="NombreRepresentanteLegal" class="form-control" required placeholder="Ej: Pedro" />
        </div>
        <div class="form-group col-sm-4">
            <label asp-for="RutRL"></label>
            <input asp-for="RutRL" class="form-control" id="rut" onblur="valRut('rut')" required placeholder="Ej: 12345678-9" />
        </div>
    </div>


    <div class="row">
        <div class="form-group col-sm-4">
            <label asp-for="FechaResolucion"></label>
            <input asp-for="FechaResolucion" class="form-control" required placeholder="Ej: 2014-08-22" />
        </div>
        <div class="form-group col-sm-4">
            <label asp-for="NumeroResolucion"></label>
            <input asp-for="NumeroResolucion" class="form-control" required placeholder="Ej: 80" />
        </div>
        <div class="form-group col-sm-4">
            <label asp-for="UnidadSII"></label>
            <input asp-for="UnidadSII" class="form-control" required placeholder="Ej: Santiago Sur" />
        </div>
    </div>
    <div class="row">
        <div class="col-lg-1">
            <button type="submit" class="btn btn-outline-info">Enrolar!</button>
        </div>
        <div class="col-lg-3">
            <a asp-action="Index" asp-controller="Home" class="btn btn-outline-dark">Volver al menú Principal</a>
        </div>
    </div>
</form>

<div class="container">
    <div class="row">
        @if (ViewData["response"] != null)
        {
            <div class="alert alert-success" role="alert">
                @ViewData["response"]
            </div>
        }

        @if (ViewData["error"] != null)
        {
            <div class="alert alert-warning" role="alert">
                @ViewData["error"]
            </div>
        }
    </div>
</div>
