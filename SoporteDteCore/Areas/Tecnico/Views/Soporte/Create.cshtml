@model SoporteDteCore.Models.Soporte

@{
    ViewData["Title"] = "Create";
}

<div class="container-fluid">

    <h3 class="text-primary">Crear Servicio</h3>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="RutCliente" class="control-label"></label>
                    <input asp-for="RutCliente" class="form-control" onblur="checkRut(this);" />
                    <span asp-validation-for="RutCliente" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RazonSocialCliente" class="control-label"></label>
                    <input asp-for="RazonSocialCliente" class="form-control" />
                    <span asp-validation-for="RazonSocialCliente" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TecnicoId" class="control-label"></label>
                    <select asp-for="TecnicoId" class="form-control" asp-items="ViewBag.TecnicoId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="Problema" class="control-label"></label>
                    <input asp-for="Problema" class="form-control" />
                    <span asp-validation-for="Problema" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Descripcion" class="control-label"></label>
                    <textarea asp-for="Descripcion" class="form-control" rows="3" cols="50"></textarea>
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Crear" class="btn btn-outline-primary" />
                    <a asp-action="Index" class="btn btn-outline-dark">Volver</a>
                </div>
            </form>
        </div>
    </div>


</div>

<script src="~/js/site.js"></script>