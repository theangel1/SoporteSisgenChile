@model SoporteDteCore.Models.Soporte

@{
    ViewData["Title"] = "Detalles";
}
    <div class="container-fluid">
        <h3 class="text-primary">Detalles servicio</h3>

        <div>          
            <hr />
            <dl class="row">

                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.RutCliente)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.RutCliente)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.RazonSocialCliente)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.RazonSocialCliente)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.FechaInicio)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.FechaInicio)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.FechaFin)
                </dt>
                <dd class="col-sm-10">
                    
                    @if (Model.FechaFin == DateTime.MinValue)
                    {
                        <label style="color:red">Servicio abierto</label>
                    }
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Problema)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Problema)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Descripcion)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Descripcion)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ApplicationUser)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ApplicationUser.Nombre)
                </dd>
            </dl>
        </div>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary">Editar</a> 
            <a asp-action="Index" class="btn btn-outline-dark">Volver</a>
        </div>
    </div>