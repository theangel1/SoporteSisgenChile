@model SoporteDteCore.Models.InternalWorkOrder
@{
    ViewData["Title"] = "Eliminar";
}

<h4 class="text-danger">Eliminar orden de trabajo desactivada</h4>
<hr />
<div class="row">
    <div class="col-md-10">
        <form method="post" asp-action="Create">
            <!--RUT Y NOMBRE-->
            <div class="row">
                <div class="form-group col-sm-5">
                    <label asp-for="@Model.RutCliente" class="control-label"></label>
                    <input readonly asp-for="@Model.RutCliente" class="form-control" />
                </div>
                <div class="form-group col-sm-5">
                    <label asp-for="@Model.NombreCliente" class="control-label"></label>
                    <input readonly asp-for="@Model.NombreCliente" class="form-control" />
                </div>
            </div>
            <!--FECHA INICIO/TERMINO-->
            <div class="row">
                <div class="form-group col-sm-5">
                    <label asp-for="@Model.FechaInicio" class="control-label"></label>
                    <input readonly asp-for="@Model.FechaInicio" class="form-control" />
                </div>
                <div class="form-group col-sm-5">
                    <label asp-for="@Model.FechaTermino" class="control-label"></label>
                    <input readonly asp-for="@Model.FechaTermino" class="form-control" />
                </div>
            </div>
            <!--OBSERVACION INICIAL-->
            <div class="row">
                <div class="form-group col-sm-10">
                    <label asp-for="@Model.Observacion" class="control-label"></label>
                    <input readonly asp-for="@Model.Observacion" class="form-control" />
                </div>
            </div>
            <!--DESCRIPCIÓN-->
            <div class="row">
                <div class="form-group col-sm-10">
                    <label asp-for="@Model.Descripcion" class="control-label"></label>
                    <textarea readonly asp-for="@Model.Descripcion" class="form-control"></textarea>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-2">
                    <button type="submit" asp-route-id="@Model.Id" class="btn btn-outline-danger">Eliminar Orden</button>
                </div>
                <div class="col-sm-4">
                    <a class="btn btn-outline-warning" asp-action="Index">Volver</a>
                </div>
            </div>
        </form>
    </div>
</div>


