@model SoporteDteCore.Models.Empresa

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1 class="text-danger">Eliminar Empresa</h1>
<h3 class="text-danger">Estas seguro de eliminar esta empresa?</h3>
<hr />
<dl class="row">
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.RutEmpresa)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.RutEmpresa)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.RazonSocial)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.RazonSocial)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.NombreFantasia)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.NombreFantasia)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.CorreoElectronico)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.CorreoElectronico)
    </dd>
</dl>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Eliminar" class="btn btn-outline-danger col-sm-12 col-md-12 col-lg-2" />
    <a asp-action="Index" class="btn btn-outline-dark col-sm-12 col-md-12 col-lg-2">Volver a la lista</a>
</form>

