@model SoporteDteCore.Models.Empresa
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1 class="text-info">Crear Nueva Empresa</h1>
<hr />
<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="form-group col-lg-6">
            <label asp-for="RutEmpresa" class="control-label"></label>
            <input asp-for="RutEmpresa" class="form-control" />
            <span asp-validation-for="RutEmpresa" class="text-danger"></span>
        </div>
        <div class="form-group col-lg-6">
            <label asp-for="RazonSocial" class="control-label"></label>
            <input asp-for="RazonSocial" class="form-control" />
            <span asp-validation-for="RazonSocial" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-lg-6">
            <label asp-for="NombreFantasia" class="control-label"></label>
            <input asp-for="NombreFantasia" class="form-control" />
            <span asp-validation-for="NombreFantasia" class="text-danger"></span>
        </div>
        <div class="form-group col-lg-6">
            <label asp-for="CorreoElectronico" class="control-label"></label>
            <input asp-for="CorreoElectronico" class="form-control" />
            <span asp-validation-for="CorreoElectronico" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <input type="submit" value="Crear" class="btn btn-outline-info col-sm-12 col-md-12 col-lg-2" />
        <a asp-action="Index" class="btn btn-outline-dark col-sm-12 col-md-12 col-lg-2">Volver a la lista</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
