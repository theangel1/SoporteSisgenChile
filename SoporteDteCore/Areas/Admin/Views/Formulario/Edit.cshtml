@model SoporteDteCore.Models.Formulario

@{
    ViewData["Title"] = "Editar Formulario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <h3 class="text-info">@ViewData["Title"]</h3>
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="@Model.Id" />
        <input hidden id="RegionId" asp-for="@Model.RegionId" class="form-control" />
        <input hidden id="ProvinciaId" asp-for="@Model.ProvinciaId" class="form-control" />
        <input hidden id="ComunaId" asp-for="@Model.ComunaId" class="form-control" />
        <div class="row">
            <div class="col-sm">
                <div class="form-group">
                    <label asp-for="@Model.RazonSocial" class="control-label"></label>
                    <input asp-for="@Model.RazonSocial" class="form-control" />
                    <span asp-validation-for="@Model.RazonSocial" class="text-danger"></span>
                </div>
            </div>
            <div class="col-sm">

                <div class="form-group">
                    <label asp-for="@Model.NombreFantasia" class="control-label"></label>
                    <input asp-for="@Model.NombreFantasia" class="form-control" />
                    <span asp-validation-for="@Model.NombreFantasia" class="text-danger"></span>
                </div>
            </div>
            <div class="col-sm">
                <div class="form-group">
                    <label asp-for="@Model.RutEmpresa" class="control-label"></label>
                    <input asp-for="@Model.RutEmpresa" class="form-control" />
                    <span asp-validation-for="@Model.RutEmpresa" class="text-danger"></span>
                </div>
            </div>
        </div>



        <div class="form-group">
            <label asp-for="@Model.Giro" class="control-label"></label>
            <input asp-for="@Model.Giro" class="form-control" />
            <span asp-validation-for="@Model.Giro" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-sm">
                <div class="form-group">
                    <label asp-for="@Model.Direccion" class="control-label"></label>
                    <input asp-for="@Model.Direccion" class="form-control" />
                    <span asp-validation-for="@Model.Direccion" class="text-danger"></span>
                </div>
            </div>
            <div class="col-sm">

                <div class="form-group">
                    <label asp-for="@Model.Telefono" class="control-label"></label>
                    <input asp-for="@Model.Telefono" class="form-control" />
                    <span asp-validation-for="@Model.Telefono" class="text-danger"></span>
                </div>
            </div>
            <div class="col-sm">
                <div class="form-group">
                    <label class="control-label">Acteco</label>
                    <input asp-for="@Model.CodigoActividad" class="form-control" />
                    <span asp-validation-for="@Model.CodigoActividad" class="text-danger"></span>
                </div>
            </div>
            <div class="col-sm">
                <div class="form-group">
                    <label class="control-label">eMail Empresa</label>
                    <input asp-for="@Model.Correo" class="form-control" />
                    <span asp-validation-for="@Model.Correo" class="text-danger"></span>
                </div>
            </div>
        </div>


        <div class="row">
            <div class="col-sm">

                <div class="form-group">
                    <label asp-for="@Model.Nombre" class="control-label"></label>
                    <input asp-for="@Model.Nombre" class="form-control" />
                    <span asp-validation-for="@Model.Nombre" class="text-danger"></span>
                </div>
            </div>
            <div class="col-sm">

                <div class="form-group">
                    <label asp-for="@Model.RutRep" class="control-label"></label>
                    <input asp-for="@Model.RutRep" class="form-control" />
                    <span asp-validation-for="@Model.RutRep" class="text-danger"></span>
                </div>
            </div>
            <div class="col-sm">

                <div class="form-group">
                    <label asp-for="@Model.SerieCarnet" class="control-label"></label>
                    <input asp-for="@Model.SerieCarnet" class="form-control" />
                    <span asp-validation-for="@Model.SerieCarnet" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm">
                <div class="form-group">
                    <label asp-for="@Model.CorreoRep" class="control-label"></label>
                    <input asp-for="@Model.CorreoRep" class="form-control" />
                    <span asp-validation-for="@Model.CorreoRep" class="text-danger"></span>
                </div>
            </div>
            <div class="col-sm">
                <div class="form-group">
                    <label asp-for="@Model.DireccionRep" class="control-label"></label>
                    <input asp-for="@Model.DireccionRep" class="form-control" />
                    <span asp-validation-for="@Model.DireccionRep" class="text-danger"></span>
                </div>
            </div>
            <div class="col-sm">

                <div class="form-group">
                    <label asp-for="@Model.TelefonoRep" class="control-label"></label>
                    <input asp-for="@Model.TelefonoRep" class="form-control" />
                    <span asp-validation-for="@Model.TelefonoRep" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm">
                <div class="form-group">
                    <label for="exampleFormControlSelect1">Solicitud</label>
                    <select asp-for="@Model.solicitado" class="form-control">
                        <option value="false">No Solicitado</option>
                        <option value="true">Solicitado</option>
                    </select>
                </div>
            </div>
            <div class="col-sm">
                <div class="form-group">
                    <label asp-for="@Model.NumeroPedido" class="control-label"></label>
                    <input asp-for="@Model.NumeroPedido" class="form-control" />
                    <span asp-validation-for="@Model.NumeroPedido" class="text-danger"></span>
                </div>
            </div>
            <div class="col-sm">
                
            </div>
        </div>

      
        <div class="form-group">
            <label class="text-muted">Región</label>
            <input asp-for="@Model.Region.Nombre" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label class="text-muted">Provincia</label>
            <input asp-for="@Model.Provincia.Nombre" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label class="text-muted">Comuna</label>
            <input asp-for="@Model.Comuna.Nombre" class="form-control" readonly />
        </div>
        <div class="form-group">
            <input type="submit" value="Guardar" class="btn btn-outline-primary col-sm-12 col-md-12 col-lg-2" />
            <a asp-action="Index" class="btn btn-dark col-sm-12 col-md-12 col-lg-2">Volver</a>
        </div>
    </form>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
