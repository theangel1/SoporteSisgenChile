@model SoporteDteCore.Models.CertificadoDigital

@{
    ViewData["Title"] = "Crear";
}
<h4 class="text-info">Crear Certificado Digital</h4>
<hr />
<div class="row">
    <div class="col-lg-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="form-group col-lg-6">
                    <label asp-for="NombreEmpresa" class="control-label"></label>
                    <input asp-for="NombreEmpresa" class="form-control" />
                    <span asp-validation-for="NombreEmpresa" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-6">
                    <label asp-for="RutEmpresa" class="control-label"></label>
                    <input asp-for="RutEmpresa" class="form-control" />
                    <span asp-validation-for="RutEmpresa" class="text-danger"></span>
                </div>
                
            </div>

            <div class="row">
                <div class="form-group col-lg-6">
                    <label asp-for="NombreRepresentanteLegal" class="control-label"></label>
                    <input asp-for="NombreRepresentanteLegal" class="form-control" />
                    <span asp-validation-for="NombreRepresentanteLegal" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-6">
                    <label asp-for="RutRepresentanteLegal" class="control-label"></label>
                    <input asp-for="RutRepresentanteLegal" class="form-control" />
                    <span asp-validation-for="RutRepresentanteLegal" class="text-danger"></span>
                </div>
                
            </div>

            <div class="row">
                <div class="form-group col-lg-6">
                    <label asp-for="FechaEmision" class="control-label"></label>
                    <input asp-for="FechaEmision" class="form-control" type="date" />
                    <span asp-validation-for="FechaEmision" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-6">
                    <label asp-for="FechaVencimiento" class="control-label"></label>
                    <input asp-for="FechaVencimiento" class="form-control" type="date" />
                    <span asp-validation-for="FechaVencimiento" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-outline-info col-sm-12 col-md-12 col-lg-2" />
                <a asp-action="Index" class="btn btn-outline-dark col-sm-12 col-md-12 col-lg-2">Volver a la lista</a>
            </div>
        </form>
    </div>
</div>

