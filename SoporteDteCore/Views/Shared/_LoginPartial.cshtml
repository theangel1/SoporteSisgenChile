@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager


@if (SignInManager.IsSignedIn(User))
{
<form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" id="logoutForm" class="navbar-right">
    <ul class="nav navbar-nav">      
        
        <li class="nav-item" style="padding-right:20px;">
            <a asp-area="Identity" asp-page="/Account/Manage/Index" class="nav-link" title="Manage">Hola @UserManager.GetUserName(User)!</a>
        </li>
        <li class="nav-item">
            <button type="submit" class="nav-link btn btn-link"><span class="oi oi-account-logout"></span> Logout</button>
        </li>        
    </ul>
</form>
}
else
{
    <ul class="nav navbar-nav navbar-right navbar-collapse justify-content-end">       
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login"><i style="color:limegreen" class="fab fa-skyatlas"></i> Log In</a>
        </li>
    </ul>
}
